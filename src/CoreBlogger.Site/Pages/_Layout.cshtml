@addTagHelper *, CoreBlogger.Site

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bryan's Blog</title>
    <link rel="stylesheet" href="~/css/site.css" />
